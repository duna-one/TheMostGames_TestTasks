<Window x:Class="TheMostGames_TestTasks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Task 1" Height="324" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Идентификаторы строк: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Identificators_Box" HorizontalAlignment="Left" Margin="155,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170"/>
        <Button Content="Подсчитать" HorizontalAlignment="Left" Margin="335,13,0,0" VerticalAlignment="Top" Width="100"/>
        <DataGrid Name="OutputDataTable" Margin="10,40,10,10" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock TextWrapping="Wrap" Text="{Binding}" TextAlignment="Center"></TextBlock>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Текст" Width="*"/>
                <DataGridTextColumn Header="Количество слов" Width="75"/>
                <DataGridTextColumn Header="Количество гласных" Width="75"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>